{
  "name": "typescript-transform-wx-cloud",
  "version": "1.0.0",
  "description": "TypeScript 函数转微信小程序云函数",
  "main": "dist/transformer.js",
  "module": "dist/transformer.mjs",
  "types": "dist/transformer.d.ts",
  "license": "MIT",
  "repository": "git@github.com:lip8up/typescript-transform-wx-cloud.git",
  "author": "lip8up <lip8up@qq.com>",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "yarn clean && rollup -c && :",
    "test": "jest --verbose",
    "testless": "jest --verbose --collectCoverage=false",
    "pub": "yarn test && yarn build && yarn publish",
    "runner": "ts-node -r tsconfig-paths/register -P tests/tsconfig.json tests/runner.ts"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "common-tags": "^1.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/common-tags": "^1.8.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "comment-json": "^4.1.1",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "jest-extended-global-fail-pass": "^1.8.8",
    "lint-staged": "^11.2.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "yorkie": "^2.0.0"
  },
  "peerDependencies": {
    "tslib": "*",
    "typescript": ">=3.7.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/*.ts": [
      "yarn testless tests",
      "yarn build",
      "git add dist"
    ]
  }
}
